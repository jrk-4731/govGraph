    <title>First Division Monument Modification Act</title>
    <createDate>2018-04-03T07:10:53Z</createDate>
    <summaries>
      <billSummaries>
        <item>
          <lastSummaryUpdateDate>2019-03-07T17:39:46Z</lastSummaryUpdateDate>
