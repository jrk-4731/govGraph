    <title>Protecting Adopted Children Act</title>
    <createDate>2017-07-28T03:11:38Z</createDate>
    <summaries>
      <billSummaries>
        <item>
          <lastSummaryUpdateDate>2018-05-17T19:46:13Z</lastSummaryUpdateDate>
          <name>Introduced in House</name>
          <updateDate>2017-07-27T04:00:00Z</updateDate>
